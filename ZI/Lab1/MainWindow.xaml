<Window x:Class="Lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1"
        mc:Ignorable="d"
        Title="Шифр Юлия Цезаря" Height="450" Width="621.716">
    <Grid Margin="0,0,0,0">
        <TextBox x:Name="Input" Text="{Binding Input}" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="592" Margin="10,10,0,0"/>
        <Button x:Name="Encrypt" Content="Зашифровать" HorizontalAlignment="Left" VerticalAlignment="Top" Width="240" Margin="10,38,0,0" Click="ButtonEncrypt_Click"/>
        <Button x:Name="Decrypt" Content="Расшифровать" HorizontalAlignment="Left" VerticalAlignment="Top" Width="240" Margin="270,38,0,0" Click="Decrypt_Click"/>
        <TextBox x:Name="Key" Text="{Binding Key}" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="40" Margin="562,35,0,0" MaxLines="1"/>
        <Label x:Name="lblKey" Content="Ключ:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="515,32,0,0"/>
        <ListBox x:Name="Output" HorizontalAlignment="Left" Height="346" VerticalAlignment="Top" Width="592" Margin="10,63,0,0"/>

    </Grid>
</Window>
